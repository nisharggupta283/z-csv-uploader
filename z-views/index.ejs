<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CSV Uploader</title>
    <link rel="stylesheet" href="/bootstrap.min.css" />
    <script src="/bootstrap.min.js"></script>
    <script src="/myJS.js"></script>
    <script src="/jquery.js"></script>
</head>

<body>
    <form action="/csv/save-file" method="post" enctype="multipart/form-data" name="my_form">
        <div class="container text-center my-3">
            <div class="row">
                <div class="col align-self-center">
                    <div class="input-group">
                        <input type="file" class="form-control" id="data" name="data"
                            aria-describedby="inputGroupFileAddon04" aria-label="Upload" />
                        <button class="btn btn-outline-secondary" type="button" onclick="validateFileType();">
                            Upload
                        </button>
                    </div>
                </div>
            </div>
            <label for="data" id="invalid-file-type"></label>
        </div>
    </form>

    <div class="container my-5" id="div">
        <div class="row">
            <div class="col-4" style="width: 90px;">
                Upload Date</div>
            <div class="col">
                FileName
            </div>
            <div class="col">
                <div class="row up justify-content-end">
                    <div class="col-4 ">
                        See Details
                        </button>
                    </div>
                </div>
            </div>
            <hr>
        </div>
    </div>

    <div class="container my-5" id="div">
    <%for(let iter of data){ console.log(iter);%>
        <div class="row">
            <div class="col-4" style="width: 90px;">
                <%=iter.when.substring(0,24)%>
            </div>
            <div class="col">
                <%=iter.original_name%>
            </div>
            <div class="col">
                <div class="row up justify-content-end">
                    <div class="col-4 ">
                        <button type="button" class="btn" style="background-color:rgb(229, 135, 106)" onclick="goToPage('<%=iter._id%>')">See Details
                        </button>
                    </div>
                </div>
            </div>
            <hr>
        </div>
    <%}%>
    </div>
</body>
</html>